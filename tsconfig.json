{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2015", 
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": false,
        "sourceMap": false,
        "removeComments": true
    },
    "filesGlob": [
        "./**/*.ts",
        "./typings/**/*.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}